@page
@model Caisse1.Pages.Commandes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Command</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Command.Id" />
            <div class="form-group">
                <label asp-for="Command.ProduitId" class="control-label"></label>
                <select asp-for="Command.ProduitId" class="form-control" asp-items="ViewBag.ProduitId"></select>
                <span asp-validation-for="Command.ProduitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Command.Quantity" class="control-label"></label>
                <input asp-for="Command.Quantity" class="form-control" />
                <span asp-validation-for="Command.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
